generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  name          String
  nickname      String?      @unique
  email         String       @unique
  password_hash String?
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  image         String?
  auth_provider AuthProvider @default(LOCAL)
  is_verified   Boolean      @default(false)
  is_private    Boolean      @default(false)

  // Foreign key
  ratings           UserMovieRating[]
  watch_list        Movie[]           @relation("WatchList")
  reset_pass_code   ResetPassCode?
  verify_email_code VerifyEmailCode?

  // Friendship
  sent_friendship_requests     Friendship[] @relation("Requester")
  received_friendship_requests Friendship[] @relation("Addressee")
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
}

model Friendship {
  id           String           @id @default(uuid())
  requester_id String
  addressee_id String
  status       FriendshipStatus @default(PENDING)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  requester User @relation("Requester", fields: [requester_id], references: [id])
  addressee User @relation("Addressee", fields: [addressee_id], references: [id])

  @@unique([requester_id, addressee_id])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model ResetPassCode {
  code       String   @default("")
  expires_in DateTime @default(now())

  // Foreign key
  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model VerifyEmailCode {
  code       String   @default("")
  expires_in DateTime @default(now())

  // Foreign key
  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Movie {
  id           String   @id @default(uuid())
  title        String
  release_year Int
  gender       String
  description  String
  popularity   Float
  rating       Float    @default(0)
  runtime      Int
  image        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Foreign key
  watched_by        User[]            @relation("WatchList")
  user_movie_rating UserMovieRating[]
}

model UserMovieRating {
  id     String @id @default(uuid())
  rating Float

  // Foreign key
  user_id  String
  user     User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  movie_id String
  movie    Movie  @relation(fields: [movie_id], references: [id], onDelete: Cascade)

  @@unique([user_id, movie_id])
}
